<div class="tabs is-boxed mb-3">
  <ul>
    <li <% if controller_name == "courses" %>class="is-active"<% end %>>
      <%= link_to teacher_course_path(@course) do %>
        <span><%= t("resources.teacher.courses.description")%></span>
      <% end %>
    </li>
    <li <% if controller_name == "lessons" %>class="is-active"<% end %>>
      <%= link_to teacher_course_lessons_path(@course) do %>
        <span><%= t("resources.teacher.lessons.list") %></span>
      <% end %>
    </li>
  </ul>
</div>