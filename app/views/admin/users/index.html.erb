<h1 class="title"><%= t("resources.admin.users.index") %></h1>

<table class="table is-striped is-hoverable is-fullwidth is-bordered mt-3">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("activerecord.attributes.user.role") %></th>
      <th><%= t("actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= t("resources.admin.users.roles.#{user.role}") %></td>
        <td>
          <%= link_to t("resources.admin.users.edit"), edit_admin_user_path(user), class: "button is-small" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>